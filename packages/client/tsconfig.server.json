{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es2022", "DOM"],
    "skipLibCheck": true,
    "declaration": false,
    "outDir": "./server/build/"
  },
  "include": ["./server/**/*.ts"],
  "exclude": ["./server/**/*.d.ts", "./node_modules"]
}
