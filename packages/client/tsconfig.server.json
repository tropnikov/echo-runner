{
  "compilerOptions": {
    "composite": true,
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es2022", "DOM"],
    "skipLibCheck": true,
    "rootDir": "./server",
    "outDir": "./server/build"
  },
  "include": ["./server/**/*.ts"],
  "exclude": ["./server/**/*.d.ts", "./server/build"]
}
