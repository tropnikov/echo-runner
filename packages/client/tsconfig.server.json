{
  "compilerOptions": {
    "composite": true,
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "lib": ["es2022", "DOM"],
    "skipLibCheck": true,
    "outDir": "./server/build",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./server/**/*.ts"],
  "exclude": ["./server/**/*.d.ts", "./node_modules"]
}
